@model HairSaloonScheduler.Models.Operations

@{
    ViewData["Title"] = "Operation Details - Admin Panel";
    Layout = null;
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #ff66b2;
            color: white;
            padding-top: 50px;
        }

            #sidebar .nav-link {
                color: #f8f9fa;
                font-size: 18px;
            }

                #sidebar .nav-link:hover {
                    background-color: #e60073;
                    color: white;
                }

                #sidebar .nav-link.active {
                    font-weight: bold;
                    background-color: #ff3385;
                }

        #content {
            margin-left: 250px;
            padding: 20px;
        }

        .btn-primary {
            background-color: #ff66b2;
            border-color: #ff66b2;
        }

            .btn-primary:hover {
                background-color: #e60073;
                border-color: #e60073;
            }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <h4 class="text-center text-white">Admin Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="AdminPanel">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Saloon" asp-action="Index">
                    <i class="fas fa-users"></i> User Page
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Employees" asp-action="Index">
                    <i class="fas fa-users"></i> Manage Employees
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-controller="Operations" asp-action="Index">
                    <i class="fas fa-cogs"></i> Manage Operations
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                    <i class="fas fa-calendar-check"></i> View Appointments
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Statistics" asp-action="GetStatistics">
                    <i class="fas fa-chart-line"></i> View Statistics
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div id="content">
        <h1>@ViewData["Title"]</h1>

        <div>
            <h4>Operations</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <label asp-for="OperationName"></label>
                </dt>
                <dd class="col-sm-10">
                    @Model.OperationName
                </dd>

                <dt class="col-sm-2">
                    <label asp-for="Duration"></label>
                </dt>
                <dd class="col-sm-10">
                    @Model.Duration
                </dd>

                <dt class="col-sm-2">
                    <label asp-for="Price"></label>
                </dt>
                <dd class="col-sm-10">
                    @Model.Price
                </dd>
            </dl>
        </div>

        <div>
            <a asp-action="Edit" asp-route-id="@Model?.OperationId" class="btn btn-primary">Edit</a> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
