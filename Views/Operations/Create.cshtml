@model HairSaloonScheduler.Models.Operations

@{
    ViewData["Title"] = "Create Operation - Admin Panel";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            overflow-x: hidden;
        }

        #sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #ff66b2;
            color: white;
            padding-top: 50px;
        }

            #sidebar .nav-link {
                color: #f8f9fa;
                font-size: 18px;
            }

                #sidebar .nav-link:hover {
                    background-color: #e60073;
                    color: white;
                }

                #sidebar .nav-link.active {
                    font-weight: bold;
                    background-color: #ff3385;
                }

        #content {
            margin-left: 250px;
            padding: 20px;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-primary {
            background-color: #ff66b2;
            border-color: #ff66b2;
        }

            .btn-primary:hover {
                background-color: #e60073;
                border-color: #e60073;
            }

        .btn-secondary {
            background-color: #ffcce6;
            border-color: #ffcce6;
            color: #e60073;
        }

            .btn-secondary:hover {
                background-color: #ff99cc;
                color: white;
            }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <h4 class="text-center text-white">Admin Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="AdminPanel">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Saloon" asp-action="Index">
                    <i class="fas fa-users"></i> User Page
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Employees" asp-action="Index">
                    <i class="fas fa-users"></i> Manage Employees
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" asp-controller="Operations" asp-action="Index">
                    <i class="fas fa-cogs"></i> Manage Operations
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Appointments" asp-action="Index">
                    <i class="fas fa-calendar-check"></i> View Appointments
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Statistics" asp-action="GetStatistics">
                    <i class="fas fa-chart-line"></i> View Statistics
                </a>
            </li>
        </ul>
    </div>

    <div id="content">
        <h1>Create Operation</h1>
        <h4>Operation Details</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OperationName" class="control-label">Operation Name</label>
                        <input asp-for="OperationName" class="form-control" />
                        <span asp-validation-for="OperationName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration" class="control-label">Duration (Minutes)</label>
                        <input asp-for="Duration" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label">Price</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
