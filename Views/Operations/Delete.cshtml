@model HairSaloonScheduler.Models.Operations

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Operations</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="OperationName"></label>
        </dt>
        <dd class="col-sm-20">
            @Model.OperationName
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Duration"></label>
        </dt>
        <dd class="col-sm-20">
            @Model.Duration
        </dd>

        <dt class="col-sm-2">
            <label asp-for="Price"></label>
        </dt>
        <dd class="col-sm-20">
            @Model.Price
        </dd>
    </dl>

    <form method="post" asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="OperationId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-primary">Cancel</a>
    </form>
</div>
