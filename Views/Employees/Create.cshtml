@model HairSaloonScheduler.Models.Employees

@{
    ViewData["Title"] = "Create Employee";
}

<h1>Create Employee</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="EmployeeName" class="control-label">Employee Name</label>
        <input asp-for="EmployeeName" class="form-control" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ExpertiseAreaId" class="control-label">Expertise Area</label>
        <select asp-for="ExpertiseAreaId" class="form-control" asp-items="@(ViewData["ExpertiseArea"] as SelectList)">
            <option value="">-- Select Expertise Area --</option>
        </select>
        <span asp-validation-for="ExpertiseAreaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
