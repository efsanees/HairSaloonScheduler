@model HairSaloonScheduler.Models.Employees

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employees</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="EmployeeId" />
			<div class="form-group">
				<label asp-for="EmployeeName" class="control-label"></label>
				<input asp-for="EmployeeName" class="form-control" />
				<span asp-validation-for="EmployeeName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ExpertiseAreaId" class="control-label">Expertise Area</label>
				<select asp-for="ExpertiseAreaId" class="form-control" asp-items="ViewBag.ExpertiseArea"></select>
				<span asp-validation-for="ExpertiseAreaId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WorkStart" class="control-label"></label>
				<input asp-for="WorkStart" class="form-control" type="time" />
				<span asp-validation-for="WorkStart" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="WorkEnd" class="control-label"></label>
				<input asp-for="WorkEnd" class="form-control" type="time" />
				<span asp-validation-for="WorkEnd" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>
