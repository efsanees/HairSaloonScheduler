@model HairSaloonScheduler.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2>Login</h2>

    @if (ViewBag.Error != null)
    {
            <div class="alert alert-danger">
            @ViewBag.Error
            </div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="UserMail" class="control-label"></label>
            <input asp-for="UserMail" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="UserMail" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Login</button>
    </form>

    <div class="mt-3">
        <p>Don't have an account? <a asp-action="SignUp" asp-controller="Login">Sign up here</a></p>
    </div>

    <div class="mt-3">
        <p><a asp-action="AdminLogin" asp-controller="Login">For Admin Login</a></p>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
