@model HairSaloonScheduler.Models.Admin

<div class="container mt-5">
    <h2>Admin Login</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    <form asp-action="AdminLogin" method="post">
        <div class="form-group">
            <label asp-for="AdminMail" class="control-label"></label>
            <input asp-for="AdminMail" class="form-control" placeholder="Enter admin email" required />
            <span asp-validation-for="AdminMail" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password" class="control-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Login</button>
    </form>

    <div class="mt-3">
        <p>Don't have an account? <a asp-action="SignUp" asp-controller="Admin">Sign up here</a></p>
    </div>

    <div class="mt-3">
        <p><a asp-action="Login" asp-controller="User">For User Login</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
